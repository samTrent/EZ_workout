<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#cccdfc"
    tools:context="com.example.samtrent.ezworkout.homeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to EZworkout!"
        android:gravity="center"
        android:background="@drawable/shap"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:id="@+id/textView"
        android:textAppearance="@android:style/TextAppearance.Medium" />





    <!--at home workout section-->

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/horizontalScrollView"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shap"
        android:layout_alignParentStart="true">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:id="@+id/homeLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">


    </LinearLayout>
    </HorizontalScrollView>

    <!--Gym workout section-->

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:id="@+id/horizontalScrollViewTop"
        android:layout_above="@+id/textView4"
        android:background="@drawable/shap">
        <!--android:background="#bccecfcf"-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:id="@+id/gymLayout"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">


        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:text="Home workouts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:layout_above="@+id/horizontalScrollView"
        android:layout_alignParentStart="true" />


    <!-- favorit scroll view -->

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/horizontalFavoritScrollView"
        android:layout_marginTop="10dp"
        android:background="@drawable/shap"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:id="@+id/favLayout"
        android:layout_above="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="29dp">


    </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:text="Empty"
        android:textColor="#46010000"
        android:layout_width="400dp"
        android:layout_height="20dp"
        android:textStyle="italic"
        android:gravity="center"
        android:id="@+id/textView3"
        android:layout_weight="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_alignBottom="@+id/horizontalFavoritScrollView"
        android:layout_alignTop="@+id/horizontalFavoritScrollView"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Gym workouts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:layout_above="@+id/horizontalScrollViewTop"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />


</RelativeLayout>
