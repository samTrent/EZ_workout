<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_workout_display"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.samtrent.ezworkout.workoutDisplayActivity">


    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addToFav"
        android:numStars="1" />

    <ImageView
    android:layout_width="250dp"
    android:layout_height="173dp"
    android:id="@+id/imageView3"
    android:layout_marginTop="44dp"
    android:layout_marginLeft="60dp"
    android:layout_alignParentTop="false"
    android:layout_centerHorizontal="true"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:layout_weight="1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">



        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/giffy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="500dp"
            android:paddingTop="80dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:src=""
            app:freezesAnimation="true"/>

            <TextView
                android:layout_height="wrap_content"
                android:id="@+id/instructionText"
                android:layout_marginBottom="113dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:layout_width="500dp" />

            <TextView
            android:layout_width="229dp"
            android:layout_height="40dp"
            android:id="@+id/workoutTitle"
            android:layout_marginStart="-275dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"


            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textSize="30sp"
                android:layout_alignEnd="@+id/imageView3"
                android:layout_weight="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="-350dp"
            android:id="@+id/materialneededText"
            android:text="Materials needed:"
            android:layout_alignParentTop="false"
            android:layout_alignParentStart="false"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="250dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="-340dp"
            android:id="@+id/materialsText"
            android:text="- dumbbell stuff"
            android:layout_alignParentTop="false"
            android:layout_alignParentStart="false"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="270dp" />



    </LinearLayout>

    </ScrollView>
</RelativeLayout>
